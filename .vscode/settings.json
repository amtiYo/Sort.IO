{
  // Explicit path where the system dotnet is located on macOS (helps VS Code extensions find it)
  "dotnet.defaultRuntimePath": "/usr/local/share/dotnet",

  // Hide build output folders from the explorer so they are not visually distracting
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/publish": true,
    "**/.idea": true,
    ".vscode": true,
    "global.json": true,
    "*.sln": true
  },
  "search.exclude": {
    "**/.idea": true,
    "**/.vscode": true,
    "global.json": true,
    "**/*.sln": true
  },
  "files.watcherExclude": {
    "**/bin/**": true,
    "**/obj/**": true
  }
}
